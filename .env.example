# Template .env file for production deployment
# Copy this to .env and update with your actual values

# MongoDB Atlas Connection String
# Get this from MongoDB Atlas → Connect → Connect your application
MONGO_URL=mongodb+srv://portfolio-user:YOUR_PASSWORD@portfolio-cluster.xxxxx.mongodb.net/?retryWrites=true&w=majority&appName=portfolio-cluster

# Database Name
DB_NAME=portfolio_db

# Port for Railway deployment
PORT=8000