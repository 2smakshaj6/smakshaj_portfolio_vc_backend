# Template .env file for production deployment
# Copy this to .env and update with your actual values

# MongoDB Atlas Connection String with SSL fix for Railway
# Get this from MongoDB Atlas → Connect → Connect your application
# IMPORTANT: Add &tlsAllowInvalidCertificates=true for Railway deployment
MONGO_URL=mongodb+srv://portfolio-user:YOUR_PASSWORD@portfolio-cluster.xxxxx.mongodb.net/?retryWrites=true&w=majority&appName=portfolio-cluster&tlsAllowInvalidCertificates=true

# Database Name
DB_NAME=portfolio_db

# Port for Railway deployment
PORT=8000